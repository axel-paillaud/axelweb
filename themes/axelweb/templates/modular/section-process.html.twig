<section class="section-process">
    <div class="section-process-inner">
        <h2>{{ page.header.heading }}</h2>
        <div class="carousel" data-carousel>
            <button class="btn-chevron btn-chevron-left" data-carousel-prev aria-label="Pr&eacute;c&eacute;dent" disabled></button>
            <div class="carousel-track-wrapper">
                <div class="carousel-track" data-carousel-track>
                    {% for item in page.header.items %}
                        {% include 'partials/components/process-card.html.twig' with {
                            tag: item.tag,
                            title: item.title,
                            description: item.description
                        } %}
                    {% endfor %}
                </div>
            </div>
            <button class="btn-chevron btn-chevron-right" data-carousel-next aria-label="Suivant"></button>
        </div>
    </div>
</section>
