{% extends 'partials/base.html.twig' %}

{% set collection = page.collection() %}
{% set active_tag = uri.param('tag') %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="default-content">
        <h1>{{ page.title }}</h1>

        {% if page.content|striptags|trim %}
            <div class="prose">
                {{ page.content|raw }}
            </div>
        {% endif %}

        {% set all_tags = [] %}
        {% for category in page.children %}
            {% for child in category.children %}
                {% for tag in child.taxonomy.tag %}
                    {% if tag not in all_tags %}
                        {% set all_tags = all_tags|merge([tag]) %}
                    {% endif %}
                {% endfor %}
            {% endfor %}
        {% endfor %}

        {% if all_tags|length > 0 %}
            <div class="blog-filters">
                {% for tag in all_tags|sort %}
                    {% if active_tag == tag %}
                        <a href="{{ page.url }}" class="tag tag--active">{{ tag }}</a>
                    {% else %}
                        <a href="{{ page.url }}/tag{{ config.system.param_sep }}{{ tag }}" class="tag">{{ tag }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}

        <div class="blog-grid">
            {% for child in collection %}
                {% include 'partials/components/blog-card.html.twig' with {article: child} %}
            {% endfor %}
        </div>

        {% if config.plugins.pagination.enabled and collection.params.pagination %}
            {% include 'partials/pagination.html.twig' with {base_url: page.url, pagination: collection.params.pagination} %}
        {% endif %}
    </div>
{% endblock %}
