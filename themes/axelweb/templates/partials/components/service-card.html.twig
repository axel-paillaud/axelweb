<div class="service-card service-card--{{ index }}" data-service>
    <div class="service-card-inner">
        <div class="service-card-heading">
            <i class="fa {{ icon }}"></i>
            <h2 class="h3">{{ title|french_typo }}</h2>
        </div>
        <div class="service-card-content">
            <span class="service-card-subtitle">[{{ subtitle }}]</span>
            <div class="service-card-description" data-service-description>
                <p>{{ description|french_typo }}</p>
            </div>
        </div>
        <div class="service-card-action">
            <a href="{{ url }}" class="btn btn-secondary">En savoir plus</a>
        </div>
    </div>
</div>
