<header class="site-header">
    <div class="site-header-inner">
        <a href="{{ home_url }}" class="site-logo">Axelweb</a>
        <nav class="site-nav hide-sm">
            <ul>
                {% for p in pages.children.visible if not p.home %}
                    {% set link_url = p.header.menu_url ?: p.url %}
                    <li>
                        <a href="{{ link_url }}" class="{{ (p.active or p.activeChild) ? 'active' : '' }}{{ p.url == '/contact' ? ' site-nav-cta' : '' }}">
                            {{ p.menu }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
        <button class="site-burger show-sm" aria-label="Menu" aria-expanded="false">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</header>
<nav class="mobile-nav show-sm" aria-label="Menu principal">
    <ul>
        {% for p in pages.children.visible if not p.home %}
            {% set link_url = p.header.menu_url ?: p.url %}
            <li>
                <a href="{{ link_url }}" class="{{ (p.active or p.activeChild) ? 'active' : '' }}{{ p.url == '/contact' ? ' mobile-nav-cta' : '' }}">
                    {{ p.menu }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>
